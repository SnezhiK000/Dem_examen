from turtle import config_dict

from django.db import models
from django.contrib.auth.models import User

# Артикул
class Artickles(models.Model):
    name = models.CharField()

# Наименования товаров
class ProductsNames(models.Model):
    name = models.CharField()

# Единицы измерения
class UnitMes(models.Model):
    name = models.CharField()

# Поставщик
class Provider(models.Model):
    name = models.CharField()

# Производитель
class Producer(models.Model):
    name = models.CharField()

# Категория продукта
class CategoryProduct(models.Model):
    name = models.CharField()
#-------------------------------------------------------
# Категория продукта
class Photos(models.Model):
    name = models.CharField()
#-------------------------------------------------------

# Пункт выдачи
class PointPlace(models.Model):
    adress = models.TextField()

# Статусы заказа
class StatusOrder(models.Model):
    name = models.CharField()

# Статусы заказа
class RolesUser(models.Model):
    name = models.CharField()

# Пользователь
class User(models.Model):
    password = models.CharField()
    email = models.CharField()
    FIO = models.CharField()
    role = models.ForeignKey(RolesUser, on_delete = models.CASCADE)

# Заказ
class Order(models.Model):
    date_order = models.DateField()
    date_delivery = models.DateField()
    point_place = models.ForeignKey(PointPlace, on_delete=models.CASCADE)
    client_order = models.ForeignKey(User, on_delete=models.CASCADE)
    code_order = models.IntegerField()
    status_order = models.ForeignKey(StatusOrder, on_delete=models.CASCADE)


# Товары
class Product(models.Model):
    artickle = models.ForeignKey(Artickles, on_delete=models.CASCADE)
    name = models.ForeignKey(ProductsNames, on_delete=models.CASCADE)
    unit_mes = models.ForeignKey(UnitMes, on_delete=models.CASCADE)
    price = models.IntegerField()
    provider = models.ForeignKey(Provider, on_delete=models.CASCADE)
    producer = models.ForeignKey(Producer, on_delete=models.CASCADE)
    category = models.ForeignKey(CategoryProduct, on_delete=models.CASCADE)
    discount = models.IntegerField()
    count_store = models.IntegerField()
    description = models.TextField()
    photo_name = models.ForeignKey(Photos, on_delete=models.CASCADE)

# Товар в заказе
class ProductOrder(models.Model):
    order_id = models.ForeignKey(Order, on_delete=models.CASCADE)
    product_id = models.ForeignKey(Product, on_delete=models.CASCADE)
    count_product = models.IntegerField()

